        <div class="box-header with-border">
          <h3 class="box-title">Niveau d'avancement global</h3>                    
        </div><!-- /.box-header -->
        <div class="box-body">
          <div class="row">
            <div class="col-md-8">
              <p class="text-center">
                <strong>Evolution: 30 Mars, 2016 - 01 Avril, 2016</strong>
              </p>
              <div class="chart">
                <!-- Sales Chart Canvas -->
                <canvas id="salesChart" height="200"></canvas>
              </div><!-- /.chart-responsive -->
            </div><!-- /.col -->
            <div class="col-md-4">
              <p class="text-center">
                <strong>Détails</strong>
              </p>
              <div class="progress-group">
                <span class="progress-text">Attendu</span>
                <span class="progress-number"><b>30</b>/100</span>
                <div class="progress sm">
                  <div class="progress-bar progress-bar-aqua" style="width: 30%"></div>
                </div>
              </div><!-- /.progress-group -->

{% block stylesheets %} 
    {{parent()}}
    {# Fichiers css en plus #}
{% endblock %}
{% block menuProjet %}class="active"{% endblock %}

{% block utilisateur %}
    {{parent()}}
{% endblock %}

{% block breadcrumbTitle %}
{% endblock %}

{% block breadcrumbDescription %}
{% endblock %}

{% block breadcrumbPosition %}

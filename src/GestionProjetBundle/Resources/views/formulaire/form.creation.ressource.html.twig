{# Formulaire de création d'une ressource #}
<form role="form">
    <div class="box box-primary">
        <div class="box-header">
            <h3>Création d'une ressource</h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="">Intervenant</label>
                        <select class="form-control">
                            {% for intervenant in liste_intervenant %}
                                <option>Nom intervenant</option>
                            {% else %}
                                <option>Défaut</option>
                            {% endfor %}   
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="">Reférence</label>
                        <input type="text" class="form-control" id="" placeholder="Reférence">
                    </div>
                    <div class="form-group">
                        <label for="">Type</label>
                        <input type="text" class="form-control" id="" placeholder="Type ressource">
                    </div>
                    <div class="form-group">
                        <label for="">Description</label>
                        <textarea class="ckeditor" rows="10" cols="50">
                        </textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="box-footer">
          <button type="reset" class="btn btn-danger pull-left">Annuler</button>
          <button type="submit" class="btn btn-success pull-right">Enregistrer</button>
        </div>
   </div>
</form>
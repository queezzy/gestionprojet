{# Template formulaire envoie mail #}

<div class="box box-primary">
    <div class="box-header">
        <h3>Envoyer un mail</h3>
    </div><!-- /.box-header -->
    <div class="box-body">
        <div class="row col-md-12">
            <div class="product-img col-md-12">
                <div class="form-group">
                    <label>Destinataire(s)</label>
                    <select class="multiselect" multiple="multiple">
                        {% for actualite in actualite %}
                            <option value="valeur"> Destinataire</option>
                        {% else %}
                            <option value="Défaut"> Défaut</option>
                        {% endfor %} 
                    </select>
                </div>
                {# Objet #} 
                <div class="form-group">
                  <label for="">Objet</label>
                  <input type="text" class="form-control" id="" placeholder="Objet du message">
                </div>
                <div class="form-group">
                  <label for="">Message</label>
                  <textarea class="ckeditor" name="" rows="10" cols="50">
                  </textarea>
                </div>
            </div>          
        </div>
    </div>
    <div class="box-footer">
      <button type="submit" class="btn btn-success pull-right">Envoyer</button>
      <button type="reset" class="btn btn-danger pull-left">Annuler</button>
    </div>
</div>
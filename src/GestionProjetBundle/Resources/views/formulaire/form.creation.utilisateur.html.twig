{# Formulaire de création d'un utilisateur #}
<div class="box box-primary">
    <div class="box-header">
        <h3>Création d'un thème</h3>
    </div>
    <form role="form">
        <div class="box-body">
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label for="">Civilité</label>
                        <select class="form-control">
                            <option>M.</option>
                            <option>Mme</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="">Nom</label>
                        <input type="text" class="form-control" id="" placeholder="Nom">
                    </div>
                    <div class="form-group">
                        <label for="">Prénom</label>
                        <input type="text" class="form-control" id="" placeholder="Prénom">
                    </div>
                    <div class="form-group">
                        <label for="">Fonction</label>
                        <input type="text" class="form-control" id="" placeholder="Fonction">
                    </div>
                    <div class="form-group">
                        <label for="">Titre</label>
                        <input type="text" class="form-control" id="" placeholder="Titre">
                    </div>
                    <div class="form-group">
                        <label for="">Entreprise</label>
                        <select class="form-control">
                            {% for intervenant in liste_intervenants %}
                                <option>Nom de l'intervenant</option>
                            {% else %}
                                <option>Defaut</option>
                            {% endfor %}   
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="">Email</label>
                        <input type="email" class="form-control" id="" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label for="">Téléphone</label>
                        <input type="tel" class="form-control" id="" placeholder="Téléphone">
                    </div>
                    <div class="form-group">
                        <label for="">Nom d'utilisateur</label>
                        <input type="text" class="form-control" id="" placeholder="Nom d'utilisateur">
                    </div>
                    <div class="form-group">
                        <label for="">Mot de passe</label>
                        <input type="password" class="form-control" id="" placeholder="Password">
                    </div>

                </div>

                <div class="col-md-4">
                    <div class="img-thumbnail img-responsive img-preview">

                        <img alt="" src="" id="preview-image" width="100%"/>
                    </div>
                    <div class="form-group">
                        <label for="">Photo de profil</label>
                        <input type="file" id="" class="inputfile">
                        <p class="help-block">Sélectionner une photo de profil.</p>
                    </div>
                </div>

            </div>
        </div>
        <div class="box-footer">
          <button type="reset" class="btn btn-danger pull-left">Annuler</button>
          <button type="submit" class="btn btn-success pull-right">Enregistrer</button>
        </div>
    </form>
</div>
{# Template liste des actualités #}


<div class="row">
<!-- Document start-->
<div class="box box-primary">
<div class="box-header">
    {# ajouter le thème à la place de la variable theme #}

  <h3 class="box-title">Liste des actualités</h3><a class="pull-right"><i class="fa fa-plus"></i>Ajouter</a>
</div><!-- /.box-header -->
<div class="box-body">
  <ul class="products-list product-list-in-box">
    {% for actualite in actualites %}
        <li class="item">
          <div class="row col-md-12">
            <div class="product-img col-md-2">
              <img src="{{asset(actualite.path)}}" alt="{{{{actualite.titre}}}}"/>
            </div>
            <div class="product-img col-md-10">                
                <div class="product-img col-md-12">
                    <h4>{{actualite.titre}}</h4>
                </div>
                <div class="product-img col-md-12">
                    <h4>{{actualite.idtheme.nom}}</h4>
                </div>
                <div class="product-info col-md-12">
                    <p>{{ actualite.description }}</p> 
                    <p>Date</p> 
                </div>
                <div class="row product-description col-md-3 pull-right">
                    <a><i class="fa fa-eye"></i>Voir</a>
                    <a><i class="fa fa-edit"></i>Modifier</a>
                </div>
            </div>                      
          </div>
        </li>
    {% else %}
        <li class="item">
          Pas d'actualités disponible!
        </li>
    {% endfor %} 
  </ul>
</div><!-- /.box-body -->
</div>
<!-- Intervenants end-->
</div><!-- /.row --> 

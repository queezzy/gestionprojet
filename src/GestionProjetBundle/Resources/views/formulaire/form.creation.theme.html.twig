{# Formulaire de création d'un thème #}
{% extends "GestionProjetBundle::bundle.template.html.twig" %}

{% block title %}Actualités{% endblock %}

{% block stylesheets %} 
    {{parent()}}
    {# Fichiers css en plus #}
    <link href="{{asset('css/dataTables.bootstrap.css')}}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block utilisateur %}
    {{parent()}}
{% endblock %}

{% block breadcrumbTitle %}
    Theme
{% endblock %}

{% block breadcrumbDescription %}
    Themes des actualites
{% endblock %}

{% block breadcrumbPosition %}
    Themes
{% endblock %}

{% block contenupage %}
    <div class="box box-primary col-md-offset-2 col-md-8">
        <div class="box-header">
            <h3>Creer un Theme</h3>
        </div><!-- /.box-header -->
        <form role="form" action="{{ path('gestion_projet_theme_new') }}" {{ form_enctype(form) }} method="POST">

            <div class="box-body">
                <div class="row">
                    <div>
                        <div class="form-group">
                            {{ form_label(form.idprojet,"Projet") }}
                            {{ form_errors(form.idprojet)}}
                            {{ form_widget(form.idprojet,{'attr':{'class':'form-control'}})}}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.nom,"Intitule du thème") }}
                            {{ form_errors(form.nom)}}
                            {{ form_widget(form.nom,{'attr':{'class':'form-control'}})}}

                        </div>
                        <div class="form-group">
                            {{ form_label(form.description,"Description du thème") }}
                            {{ form_errors(form.description)}}
                            {{ form_widget(form.description,{'attr':{'class':'form-control'}})}}
                        </div>
                        <div class="form-group">
                            
                            {{ form_rest(form)}}
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <button type="reset" class="btn btn-danger pull-left">Annuler</button>
                <button type="submit" class="btn btn-success pull-right">Enregistrer</button>
            </div>
        </form>
    </div>
{% endblock %}

{% block js %}
    {{ parent()}}
    {# Fichiers js en plus #}
    <script src="{{asset('js/jquery.dataTables.min.js')}}" type="text/javascript"></script>
    <script src="{{asset('js/dataTables.bootstrap.min.js')}}" type="text/javascript"></script>
    <script>
        $(function () {
            $(".data-table").DataTable();
        });
    </script>
{% endblock %}
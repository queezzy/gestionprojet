{# Formulaire de création d'un thème #}
{% extends "GestionProjetBundle::bundle.template.html.twig" %}

{% block title %}Actualités{% endblock %}

{% block stylesheets %} 
    {{parent()}}
    {# Fichiers css en plus #}
    <link href="{{asset('css/dataTables.bootstrap.css')}}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block utilisateur %}
    {{parent()}}
{% endblock %}

{% block breadcrumbTitle %}
    Actualité
{% endblock %}

{% block breadcrumbDescription %}
   Actualités du projet
{% endblock %}

{% block breadcrumbPosition %}
   Actualités
{% endblock %}

{% block contenupage %}
<div class="box box-primary">
    <div class="box-header">
      <h3>Creer une actualité</h3>
    </div><!-- /.box-header -->
<form role="form">
    <div class="box box-primary">
        <div class="box-header">
            <h3>Création d'un thème</h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="">Projet</label>
                        <select class="form-control">
                            {% for projet in liste_projet %}
                                <option>Nom projet</option>
                            {% else %}
                                <option>Défaut</option>
                            {% endfor %}   
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="">Nom du thème</label>
                        <input type="text" class="form-control" id="" placeholder="Nom thème">
                    </div>
                    <div class="form-group">
                        <label for="">Description du thème</label>
                        <input type="text" class="form-control" id="" placeholder="Description thème">
                    </div>
                </div>
            </div>
        </div>
        <div class="box-footer">
          <button type="reset" class="btn btn-danger pull-left">Annuler</button>
          <button type="submit" class="btn btn-success pull-right">Enregistrer</button>
        </div>
   </div>
</form>
</div>
{% endblock %}

{% block js %}
    {{ parent()}}
    {# Fichiers js en plus #}
    <script src="{{asset('js/jquery.dataTables.min.js')}}" type="text/javascript"></script>
    <script src="{{asset('js/dataTables.bootstrap.min.js')}}" type="text/javascript"></script>
    <script>
      $(function () {
        $(".data-table").DataTable();
      });
    </script>
{% endblock %
{# Formulaire de création d'une actualité #}
{% extends "GestionProjetBundle::bundle.template.html.twig" %}

{% block title %}Actualités{% endblock %}

{% block stylesheets %} 
    {{parent()}}
    {# Fichiers css en plus #}
    <link href="{{asset('css/dataTables.bootstrap.css')}}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block menuActualite %}class="active"{% endblock %}

{% block utilisateur %}
    {{parent()}}
{% endblock %}

{% block breadcrumbTitle %}
   
{% endblock %}

{% block breadcrumbDescription %}
    
{% endblock %}

{% block breadcrumbPosition %}
    Actualités
{% endblock %}

{% block contenupage %}
    <div class="box box-success">
        <div class="box-header">
            <h3>Créer une actualité</h3>
        </div><!-- /.box-header -->
        <form role="form" action="{{ path('gestion_projet_actualite_new') }}" {{ form_enctype(form) }} method="POST">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <div class="form-group">
                            {{ form_label(form.idtheme,"Theme") }}
                            {{ form_errors(form.idtheme)}}
                            {{ form_widget(form.idtheme,{'attr':{'class':'form-control'}})}}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.titre,"Titre") }}
                            {{ form_errors(form.titre)}}
                            {{ form_widget(form.titre,{'attr':{'class':'form-control'}})}}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.description,"Description") }}
                            {{ form_errors(form.description)}}
                            {{ form_widget(form.description,{'attr':{'class':'form-control'}})}}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.contenu,"Contenu") }}
                            {{ form_errors(form.contenu)}}
                            {{ form_widget(form.contenu,{'attr':{'class':'form-control ckeditor'}})}}
                        </div>
                        <div class="col-md-4">
                            <div class="img-thumbnail img-responsive img-preview">

                                <img alt="" src="" id="preview-image" width="100%"/>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.file, "Inserer une image")}}
                                {{ form_errors(form.file)}}
                                {{ form_widget(form.file, { 'attr' : {'class' : 'inputfile' }}) }}
                                <!--input type="file" id="" class="inputfile"-->

                                <p class="help-block">Choisissez l'image.</p>
                            </div>
                            <div class="form-group">

                                {{ form_rest(form)}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-footer col-md-8 col-md-offset-2">
                <button type="reset" class="btn btn-danger">Annuler</button>
                <button type="submit" class="btn btn-success">Enregistrer</button>
            </div>
        </form>
    </div>
{% endblock %}

{% block js %}
    {{ parent()}}
    {# Fichiers js en plus #}
    <script src="{{asset('js/jquery.dataTables.min.js')}}" type="text/javascript"></script>
    <script src="{{asset('js/dataTables.bootstrap.min.js')}}" type="text/javascript"></script>
    <script>
        $(function () {
            $(".data-table").DataTable();
        });
    </script>
{% endblock %}
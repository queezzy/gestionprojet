{# Template affichage d'une actualité #}

<div class="box box-primary">
    <div class="box-header">
        <h3>Actualité</h3>
    </div><!-- /.box-header -->
    <div class="box-body">
        <div class="row col-md-12">
            <div class="product-img col-md-12">
                <div class="product-img col-md-1">
                    <img src="dist/img/default-50x50.gif" alt="Product Image"/>
                </div>
                <div class="product-img col-md-2">
                    <h4>Thème</h4>
                </div>
                <div class="product-img col-md-2">
                    <h4>Titre</h4>
                </div>
            </div>
            <div class="product-info col-md-12">
                <p>Description</p>                
            </div>
            <div class="product-info col-md-12">
                <div class="product-description">
                  Contenu
                </div>
            </div>
        </div>
    </div>
    <div class="box-footer">
      <button class="btn btn-success pull-right">Modifier</button>
      <button class="btn btn-danger pull-left">Supprimer</button>
    </div>
</div>
{# Page e présentation d'un intervenant  #}
{% extends "GestionProjetBundle::bundle.template.html.twig" %}

{% block title %}Intervenants{% endblock %}

{% block stylesheets %} 
    {{parent()}}
    {# Fichiers css en plus #}
{% endblock %}

{% block utilisateur %}
    {{parent()}}
{% endblock %}

{% block breadcrumbTitle %}
{% endblock %}

{% block breadcrumbDescription %}
{% endblock %}

{% block breadcrumbPosition %}
  Intervenants
{% endblock %}

{% block contenupage %}
<!-- Intervenant du projet start -->
<div class="box box-primary">
    <!-- /.box-header start -->
  <div class="box-header with-border">
    <h3 class="box-title">{{intervenant.nom}}</h3>                      
  </div>
    <!-- /.box-header end -->

    <!-- /.box-body start-->
  <div class="box-body">
      <!-- Left Panel start-->
    <div class="col-md-4">
        <!-- Présentation du projet start -->
        <div class="box box-success">
            <!-- /.box-header start -->
          <div class="box-header with-border">
            <h3 class="box-title">Présentation</h3>                      
          </div>
            <!-- /.box-header end -->

            <!-- /.box-body start-->
          <div class="box-body">
              {{intervenant.presentation}}
          </div>
            <!-- /.box-body end -->
        </div>
        <!-- Présentation du projet end -->

        <!-- Intervenants du projet start -->
        <div class="box box-success">
            <!-- /.box-header start -->
          <div class="box-header with-border">
            <h3 class="box-title">Description</h3>                      
          </div>
            <!-- /.box-header end -->

            <!-- /.box-body start-->
          <div class="box-body">
              {{intervenant.description}}

          </div>
            <!-- /.box-body end -->
        </div>
        <!-- Intervenants du projet end -->
    </div>
    <!-- Left Panel end-->

    <!-- Central Panel start-->
    <div class="col-md-8">
        <div class="row">
            <!-- Calendrier start -->
            <div class="col-md-6">
            <div class="box box-success">
                <!-- /.box-header start -->
              <div class="box-header with-border">
                <h3 class="box-title">Rôles et missions</h3>                      
              </div>
                <!-- /.box-header end -->

                <!-- /.box-body start-->
              <div class="box-body">
                  {{intervenant.rolemission}}
              </div>
                <!-- /.box-body end -->
            </div>
            </div>
            <!-- Calendrier end -->

            <!-- Evolution start -->
            <div class="col-md-6">
            <div class="box box-success">
                <!-- /.box-header start -->
              <div class="box-header with-border">
                <h3 class="box-title">Personnels clés</h3>                      
              </div>
                <!-- /.box-header end -->

                <!-- /.box-body start-->
              <div class="box-body">
                  {%if personnelcle%}
                        {%for user in personnelcle%}
                            {{user.nom}}
                        {%endfor%}
                   {%endif%}
              </div>
                <!-- /.box-body end -->
            </div>
            </div>
            <!-- Evolution end -->
        </div>
        <div class="row">
            <div class="box box-success">
                <!-- /.box-header start -->
              <div class="box-header with-border">
                <h3 class="box-title">Avancements</h3>                      
              </div>
                <!-- /.box-header end -->

                <!-- /.box-body start-->
              <div class="box-body">
                  <div class="progress-group">
                        <span class="progress-text">Attendue</span>
                        <span class="progress-number"><b>{{intervenant.evolutionattendu}}</b>/100</span>
                        <div class="progress sm">
                          <div class="progress-bar progress-bar-aqua" style="width: {{intervenant.evolutionattendu}}%"></div>
                        </div>
                    </div>
                  <div class="progress-group">
                        <span class="progress-text">Réalisée</span>
                        <span class="progress-number"><b>{{intervenant.evolutionencours}}</b>/100</span>
                        <div class="progress sm">
                          <div class="progress-bar progress-bar-red" style="width: {{intervenant.evolutionencours}}%"></div>
                        </div>
                    </div>
              </div>
                <!-- /.box-body end -->
            </div>
        </div>

    </div>
    <!-- Central Panel end-->

  </div>
    <!-- /.box-body end -->
</div>
<!-- Intervenants du projet end -->
{% endblock %}

{% block js %}
    {{ parent()}}
    {# Fichiers js en plus #}
    <script src="{{asset('bundles/gestionprojet/js/ajax_intervenant.js')}}"></script>
    <script src="{{asset('js/jquery.dataTables.min.js')}}" type="text/javascript"></script>
    <script src="{{asset('js/dataTables.bootstrap.min.js')}}" type="text/javascript"></script>
    <script src="{{asset('js/Chart.min.js')}}" type="text/javascript"></script>
    <script src="{{asset('js/evolution.js')}}" type="text/javascript"></script>
    <script>
      $(function () {
        $("#listeintervenants").DataTable();
      });
    </script>
{% endblock %}
{# Page d'Actualites du projet  #}


{% extends "GestionProjetBundle::bundle.template.html.twig" %}

{% block title %}Actualités{% endblock %}

{% block stylesheets %} 
    {{parent()}}
    {# Fichiers css en plus #}
    <link href="{{asset('css/dataTables.bootstrap.css')}}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block utilisateur %}
    {{parent()}}
{% endblock %}

{% block breadcrumbTitle %}
    Actualité
{% endblock %}

{% block breadcrumbDescription %}
   Actualités du projet
{% endblock %}

{% block breadcrumbPosition %}
   Actualités
{% endblock %}

{% block contenupage %}
<div class="row">              
    <!-- Actualité start-->
    <div class="col-sm-8">                  
        <div class="box box-primary">
            <div class="box-header">
              <h3>Actualités</h3><a class="pull-right"><i class="fa fa-plus"></i>Ajouter</a>
            </div><!-- /.box-header -->
            <div class="box-body">
             <ul class="products-list product-list-in-box">
    {% for actualite in actualites %}
        <li class="item">
          <div class="row col-md-12">
            <div class="product-img col-md-2">
              <img src="images/default-50x50.gif" alt="Product Image"/>
            </div>
            <div class="product-img col-md-10">                
                <div class="product-img col-md-12">
                    <h4>Titre</h4>
                </div>
                <div class="product-img col-md-12">
                    <h4>Thème</h4>
                </div>
                <div class="product-info col-md-12">
                    <p>Description</p> 
                    <p>Date</p> 
                </div>
                <div class="row product-description col-md-3 pull-right">
                    <a><i class="fa fa-eye"></i>Voir</a>
                    <a><i class="fa fa-edit"></i>Modifier</a>
                </div>
            </div>                      
          </div>
        </li>
    {% else %}
        <li class="item">
          Pas d'actualités disponible!
        </li>
    {% endfor %} 
  </ul>
            </div><!-- /.box-body -->
          </div>
    </div>
    <!-- Actualité end-->

    <!-- Thèmes start controleur qui affiche la liste des themes-->
        <div class="col-sm-4">                  
          {{render(controller("GestionProjetBundle:Theme:getAllTheme"))}}
        </div>
    <!-- Thèmes end-->
</div>
{% endblock %}

{% block js %}
    {{ parent()}}
    {# Fichiers js en plus #}
    <script src="{{asset('js/jquery.dataTables.min.js')}}" type="text/javascript"></script>
    <script src="{{asset('js/dataTables.bootstrap.min.js')}}" type="text/javascript"></script>
    <script>
      $(function () {
        $(".data-table").DataTable();
      });
    </script>
{% endblock %}
{% block contenupage %}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <ul id="filters" class="clearfix">
                {% if annees %}
			{% set datafilter = ""%}
			{% set i = 0%}
			{% for annee in annees %}
				{% set datafilter = datafilter~"photo"~annee %}
				{% set i = i + 1%}
				{%if not loop.last%}
					{% set datafilter = datafilter~" " %}
				{%endif%}
			{% endfor %}
				<li><span class="filter active" data-filter="{{datafilter}}">All</span></li>
			{% for annee in annees %}
                <li><span class="filter" data-filter="photo{{annee}}">{{annee}}</span></li>
			{% endfor %}
                {% endif %}
            </ul>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row  mar-b-30">
        <div id="portfoliolist">
            {% if projet %}
            <div class="col-md-12">
                {{render(controller('GestionProjetBundle:Photo:listephotos', {'idprojet': projet.id}))}}
            </div>
            {% endif %}
        </div>
       </div>
    </div>
{% endblock %}


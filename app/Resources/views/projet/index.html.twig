{% extends 'base.html.twig' %}

{% block body %}
    <h1>Projet list</h1>

    <table>
        <thead>
            <tr>
                <th>Idprojet</th>
                <th>Code</th>
                <th>Intitule</th>
                <th>Description</th>
                <th>Datedebut</th>
                <th>Datefin</th>
                <th>Budget</th>
                <th>Demandeur</th>
                <th>Evolutionattendu</th>
                <th>Evolutionencours</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for projet in projets %}
            <tr>
                <td><a href="{{ path('projet_admin_show', { 'id': projet.idprojet }) }}">{{ projet.idprojet }}</a></td>
                <td>{{ projet.code }}</td>
                <td>{{ projet.intitule }}</td>
                <td>{{ projet.description }}</td>
                <td>{% if projet.datedebut %}{{ projet.datedebut|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if projet.datefin %}{{ projet.datefin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ projet.budget }}</td>
                <td>{{ projet.demandeur }}</td>
                <td>{{ projet.evolutionattendu }}</td>
                <td>{{ projet.evolutionencours }}</td>
                <td>{{ projet.statut }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('projet_admin_show', { 'id': projet.idprojet }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('projet_admin_edit', { 'id': projet.idprojet }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('projet_admin_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}

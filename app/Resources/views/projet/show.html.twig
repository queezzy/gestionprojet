{% extends 'base.html.twig' %}

{% block body %}
    <h1>Projet</h1>

    <table>
        <tbody>
            <tr>
                <th>Idprojet</th>
                <td>{{ projet.idprojet }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ projet.code }}</td>
            </tr>
            <tr>
                <th>Intitule</th>
                <td>{{ projet.intitule }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ projet.description }}</td>
            </tr>
            <tr>
                <th>Datedebut</th>
                <td>{% if projet.datedebut %}{{ projet.datedebut|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{% if projet.datefin %}{{ projet.datefin|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Budget</th>
                <td>{{ projet.budget }}</td>
            </tr>
            <tr>
                <th>Demandeur</th>
                <td>{{ projet.demandeur }}</td>
            </tr>
            <tr>
                <th>Evolutionattendu</th>
                <td>{{ projet.evolutionattendu }}</td>
            </tr>
            <tr>
                <th>Evolutionencours</th>
                <td>{{ projet.evolutionencours }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ projet.statut }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('projet_admin_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('projet_admin_edit', { 'id': projet.idprojet }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

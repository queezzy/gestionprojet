{# Page d'authentification  #}
{% extends "::base.html.twig" %}

{% block title %}Erreur 500{% endblock %}

{% block stylesheets %} 
    {{parent()}}
    {# Fichiers css en plus #}
    <link href="{{asset('css/icheck-blue.css')}}" rel="stylesheet" type="text/css" />
{% endblock %}
{% block menu %}
{% endblock %}    
{% block contenu %}
 <body class="hold-transition login-page">
    <div class="login-page">
		<h1>Erreur 500</h1>

    {# example security usage, see below #}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        {# ... #}
    {% endif %}

    <p>
        Une Erreur s'est produite dans le serveur au moment de l'exécution de cette requête
         or <a href="{{ path('homepage') }}">retourner à la page d'accueil</a>.
    </p>
  </div>
</body>
{% endblock %}


{% block js %}
    {{ parent()}}
    {# Fichiers js en plus #}
    <script src="{{asset('js/icheck.min.js')}}" type="text/javascript"></script>
    <script>
      $(function () {
        $('input').iCheck({
          checkboxClass: 'icheckbox_square-blue',
          radioClass: 'iradio_square-blue',
          increaseArea: '20%' // optional
        });
      });
    </script>
{% endblock %}